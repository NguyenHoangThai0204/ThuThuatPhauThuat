@{
	ViewData["Title"] = "Danh sách thủ thuật phẩu thuật";
}
<link href="~/dist/css/CSS0302/CSS0302TTPT/CSS0302DanhSach.css" rel="stylesheet" />

<div class="row me-0">
	<div class="col-12 col-lg-20 mb-2 pe-1">
		<div class="card p-1 bg-azure-lt mb-1">
			<div class="row" style="margin-bottom: 6px;">
				<div class="col-md-4">
					<label class="col-form-label form-label text-truncate" style="max-width: 180px">Ngày: </label>
				</div>
				<div class="col-md-2 flex-fill">
				
					<div class="input-icon">
						<input id="txtDateTime" type="text" class="form-control"
							   placeholder="Chọn ngày giờ" autocomplete="off" />
						<span class="input-icon-addon">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
								 viewBox="0 0 24 24" fill="none" stroke="currentColor"
								 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
								 class="icon icon-tabler icon-tabler-calendar-event">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
								<path d="M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
								<path d="M16 3l0 4"></path>
								<path d="M8 3l0 4"></path>
								<path d="M4 11l16 0"></path>
								<path d="M8 15h2v2h-2z"></path>
							</svg>
						</span>
					</div>
				</div>
			
			</div>
			<div class="row" style="margin-bottom: 6px;">
				<div class="col-md-4">
					<label class="col-form-label form-label text-truncate" style="max-width: 180px">Phòng khám: </label>
				</div>
				<div class="col-md-2 flex-fill">
					<input class="tom-select-test" type="text" name="name" />
				</div>
			</div>
			<!-- Nhóm radio -->
			<div class="mb-3" style="margin-left: 20px">
				<div class="form-check">
					<input class="form-check-input" type="radio" name="statusGroup" id="status0" value="0" checked>
					<label class="form-check-label text-danger" for="status0">Chưa thực hiện</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="statusGroup" id="status1" value="1">
					<label class="form-check-label text-success" for="status1">Đã thực hiện</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="statusGroup" id="status2" value="2">
					<label class="form-check-label text-secondary" for="status2">Tất cả</label>
				</div>
			</div>

			<!-- Nút -->
			<div class="col-12 mb-1">
				<button id="btnLocDanhSachTTPT" class="btn btn-primary w-100 p-1">Lọc danh sách</button>
			</div>

		</div> 
		<div class="card p-1">
			<div class="row TimKiemNangCao">
				<div class="col-12 col-md-6 mb-1">
					<input type="text" autocomplete="off" class="form-control py-1 txtds" id="txtMaVaoVienDS" placeholder="Tìm mã vào viện">
				</div>
				<div class="col-12 col-md-6 mb-1">
					<input type="text" autocomplete="off" class="form-control py-1 txtds" id="txtMaBenhNhanDS" placeholder="Tìm mã bệnh nhân">
				</div>
				<div class="col-12 col-md-6 mb-1">
					<input type="text" autocomplete="off" class="form-control py-1 txtds" id="txtTenBnDS" placeholder="Tìm tên bệnh nhân">
				</div>
				<div class="col-12 col-md-6 mb-1">
					<input type="text" autocomplete="off" class="form-control py-1 txtds" id="txtCCCDDS" placeholder="Tìm CCCD">
				</div>
				<div class="col-12 col-md-6 mb-1">
					<input type="text" autocomplete="off" class="form-control py-1 txtds" id="txtMaTheDS" placeholder="Tìm mã thẻ">
				</div>
				<div class="col-12 col-md-6 mb-1">
					<input type="text" autocomplete="off" class="form-control py-1 txtds" id="txtSDTDS" placeholder="Tìm số điện thoại">
				</div>
				<div class="col-12 mb-1">
					<button class="btn btn-primary w-100 p-1" id="btnSearchNangCao">Tìm kiếm nâng cao</button>
				</div>
			</div>
		</div>
	</div>

	<div class="col-12 col-lg-80 ps-1 pe-0">
		<div class="card">
			<div class="table_danhsach-responsive">
				<table id="example" class="table table_danhsach table-bordered table-hover w-100">
					<thead class="table-light">
						<tr>
							<th class="w-1">STT</th>
							<th>Mã BN</th>
							<th>Tên BN</th>
							<th>Năm sinh</th>
							<th>Giới tính</th>
							<th>Khẩn</th>
							<th>Nhóm dịch vụ</th>
							<th>Tên dịch vụ</th>
							<th>Thời gian</th>
							<th>Nơi thực hiện</th>
							<th>Bác sĩ chỉ định</th>
							<th>Nơi chỉ định</th>
						</tr>
					</thead>
					<tbody id="tbodyData"></tbody>
				</table>
			</div>
		</div>
		<div class="phan_trang">
			<div class="d-flex" style="align-items: center;">
				<label class="form-label" style="font-size:1rem !important;">Số bản ghi mỗi trang:</label>
				<select id="pageSizeSelect" style="font-size:1rem !important;" class="form-select">
					<option value="10">10</option>
					<option value="20">20</option>
					<option value="50">50</option>
					<option value="100">100</option>
				</select>
			</div>
			<div style="display:flex; align-items:center; ">
				<nav aria-label="Page navigation">
					<ul class="pagination justify-content-center" id="pagination">
					</ul>
				</nav>
				<div class="text-center" style="margin-left: 2px">
					<span id="pageInfo"></span>
				</div>
			</div>
		</div>
	</div>

</div>

<script src="~/dist/js/J0302/J0302TTPT/J0302DanhSach.js" asp-append-version="true" defer></script>


