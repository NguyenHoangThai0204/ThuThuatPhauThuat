@{
    ViewData["Title"] = "Trình tự và kết luận";
}

<div class="card">
    <div class="card-body">
        <div class="row" style="height: 80vh;">
            <!-- Cột trái: Danh sách hình ảnh -->
            <div class="col-md-3 border-end">
                <div class="card h-100">
                    <div class="card-header py-2">
                        <h6 class="card-title mb-0">Hình ảnh</h6>
                    </div>
                    <div class="card-body p-2" style="overflow-y: auto;">
                        <div class="list-group list-group-flush small">
                            <a href="#" class="list-group-item list-group-item-action active">
                                HÌNH CƠ BẢN (P) <br />
                                <small>19/08/2025 09:39:30</small>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action">
                                HÌNH CƠ BẢN (T) <br />
                                <small>19/08/2025 09:41:15</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cột phải: Editor -->
            <div class="col-md-9">
                <div class="card h-100 d-flex flex-column">
                    <div class="card-header py-2">
                        <h6 class="card-title mb-0">Mẫu tường trình</h6>
                    </div>
                    <div class="card-body p-3 flex-fill" style="overflow-y: auto;">
                        <!-- Toolbar -->
                        <div class="mb-3 p-2 border rounded bg-light d-flex flex-wrap align-items-center gap-2" id="editorToolbar">
                            <!-- Font -->
                            <select class="form-select form-select-sm" id="fontFamily" style="width: auto;">
                                <option value="Arial">Arial</option>
                                <option value="Times New Roman" selected>Times New Roman</option>
                                <option value="Courier New">Courier New</option>
                                <option value="Verdana">Verdana</option>
                            </select>
                            <!-- Size -->
                            <select class="form-select form-select-sm" id="fontSize" style="width: 80px;">
                                <option value="1">8pt</option>
                                <option value="2">10pt</option>
                                <option value="3" selected>12pt</option>
                                <option value="4">14pt</option>
                                <option value="5">18pt</option>
                                <option value="6">24pt</option>
                                <option value="7">36pt</option>
                            </select>
                            <!-- Bold/Italic/Underline -->
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="bold" title="In đậm">
                                    <i class="ti ti-bold"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="italic" title="In nghiêng">
                                    <i class="ti ti-italic"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="underline" title="Gạch chân">
                                    <i class="ti ti-underline"></i>
                                </button>
                            </div>
                            <!-- Align -->
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="justifyLeft" title="Căn trái">
                                    <i class="ti ti-align-left"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="justifyCenter" title="Căn giữa">
                                    <i class="ti ti-align-center"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="justifyRight" title="Căn phải">
                                    <i class="ti ti-align-right"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="justifyFull" title="Căn đều">
                                    <i class="ti ti-align-justified"></i>
                                </button>
                            </div>
                            <!-- List -->
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="insertUnorderedList" title="Danh sách">
                                    <i class="ti ti-list"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-command="insertOrderedList" title="Danh sách số">
                                    <i class="ti ti-list-numbers"></i>
                                </button>
                            </div>
                            <!-- Case Change -->
                            <button type="button" class="btn btn-sm btn-outline-secondary" data-command="changeCase" title="Chữ hoa/thường">
                                <i class="ti ti-letter-case"></i>
                            </button>
                            <!-- Text color -->
                            <input type="color" id="textColor" class="form-control form-control-sm"
                                   style="width: 50px; height: 32px; padding: 2px;" title="Màu chữ" value="#000000">
                        </div>
                        <!-- Content -->
                        <div id="editorContent"
                             contenteditable="true"
                             class="form-control"
                             style="height: 60vh; overflow-y: auto; padding: 15px;">
                            Nhập hướng dẫn tường trình...
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <button id="btnSaveHuongDan" class="btn btn-primary me-2">
                            <i class="ti ti-device-floppy pe-1 mt-1"></i> Lưu
                        </button>
                        <button id="btnResetEditor" class="btn btn-outline-secondary">
                            <i class="ti ti-refresh pe-1 mt-1"></i> Làm mới
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>