@{
	ViewData["Title"] = "Thủ thuật phẩu thuật";
}

<link href="~/dist/lib/toastr/build/toastr.min.css" rel="stylesheet" />

<style>


</style>
<div class="card p-1">
        <div class="card-infor" style="height:50px; background: yellow;"> 

        </div>
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs nav-fill" data-bs-toggle="tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a href="#tabs-danhsach-7" class="nav-link active" data-bs-toggle="tab" aria-selected="true" role="tab">
                        <!-- Download SVG icon from http://tabler.io/icons/icon/home -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2 icon-2">
                            <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                        </svg>Danh sách
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a href="#tabs-thongtin-7" class="nav-link" data-bs-toggle="tab" aria-selected="false" tabindex="-1" role="tab">
                        <!-- Download SVG icon from http://tabler.io/icons/icon/user -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2 icon-2">
                            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path>
                            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
                        </svg>Thông tin TTPT
                    </a>
                </li>
               
            </ul>
        </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active show" id="tabs-home-7" role="tabpanel"></div>
            <div class="tab-pane" id="tabs-profile-7" role="tabpanel"></div>
            <div class="tab-pane" id="tabs-activity-7" role="tabpanel"></div>
        </div>
    </div>

</div>



@section Scripts {
		<script src="~/dist/lib/toastr/build/toastr.min.js"></script>
        <script>
            $(document).ready(function () {
                // load Home mặc định
            $("#tabs-home-7").load("/thu_thuat_phau_thuat/danh_sach");

                // khi click tab
                $('a[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                    var target = $(e.target).attr("href"); // #tabs-home-7 / #tabs-profile-7
                    if (target === "#tabs-danhsach-7") {
                    $(target).load("/thu_thuat_phau_thuat/danh_sach");
                    }
                    else if (target === "#tabs-thongtin-7") {
                    $(target).load("/thu_thuat_phau_thuat/thong_tin");
                    }
                    // else if (target === "#tabs-activity-7") {
                    //     $(target).load("/thu_thuat_phau_thuat/activity");
                    // }
                });
            });
        </script>
}




